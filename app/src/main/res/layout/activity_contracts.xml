<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        tools:context=".AjoutContracts">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:orientation="vertical" >
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Add new contract "
        android:textAlignment="center"
        android:textSize="20sp"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="client Name"
              android:id="@+id/contractClient"
    />




    <EditText android:layout_width="match_parent"
              android:inputType="date"
              android:layout_height="wrap_content"
              android:id="@+id/datedebut"

              android:hint="date debut" />


    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/datefin"
              android:inputType="date"
              android:hint="date fin" />


    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ref"
              android:inputType="numberDecimal"
              android:hint="reference " />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:weightSum="2"
                  android:orientation="horizontal">

        <Button android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/contratbtnsave"
                android:text="SAVE" />
        <Button android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/contratbtncancel"
                android:layout_marginLeft="10dp"
                android:text="CANCEL" />


    </LinearLayout>

</LinearLayout>
</RelativeLayout>
